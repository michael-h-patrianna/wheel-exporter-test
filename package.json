{
  "name": "wheel-exporter-test",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jszip": "^3.4.0",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "jszip": "^3.10.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^5.9.3",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "prebuild": "bash scripts/tools/copy-theme.sh",
    "build": "NODE_OPTIONS='--no-deprecation' react-scripts build",
    "test": "npm run validate:test && react-scripts test --watchAll=false --coverage",
    "test:watch": "react-scripts test",
    "test:coverage": "react-scripts test --watchAll=false --coverage --coverageReporters=text-lcov --coverageReporters=text",
    "test:e2e": "npm run validate:e2e && playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run validate:test && npm test && npm run validate:e2e && npm run test:e2e",
    "validate:test": "bash scripts/tools/validate-test-setup.sh test",
    "validate:e2e": "bash scripts/tools/validate-test-setup.sh e2e",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "playwright": "^1.56.0"
  }
}
