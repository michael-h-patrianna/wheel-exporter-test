{
  "name": "wheel-exporter-test",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/jszip": "^3.4.0",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "jszip": "^3.10.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "npm run validate:test && react-scripts test --watchAll=false --coverage",
    "test:watch": "react-scripts test",
    "test:coverage": "react-scripts test --watchAll=false --coverage --coverageReporters=text-lcov --coverageReporters=text",
    "test:e2e": "npm run validate:e2e && playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run validate:test && npm test && npm run validate:e2e && npm run test:e2e",
    "validate:test": "bash scripts/tools/validate-test-setup.sh test",
    "validate:e2e": "bash scripts/tools/validate-test-setup.sh e2e",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "playwright": "^1.55.1"
  }
}
